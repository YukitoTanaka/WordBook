<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ScheduleEditActivity">

    <Button
            android:text="@string/delete_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/delete"
            android:textStyle="bold" android:textColor="#ffff"
            android:textSize="24sp" android:background="@drawable/button_background"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/save"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/detailEdit"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.6"/>
    <TextView
            android:text="@string/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:id="@+id/textView"
            android:textSize="24sp" android:textColor="#000000"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/titleEdit" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="64dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:inputType="textPersonName"
            android:ems="10"
            android:maxLength="50"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:id="@+id/titleEdit" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:height="300px"/>
    <TextView
            android:text="@string/detail_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:id="@+id/textView3" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/titleEdit"
            android:textColor="#000000" android:textSize="24sp"
    />
    <EditText
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_weight="2"
            android:inputType="textMultiLine"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:id="@+id/detailEdit" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginTop="8dp"
            android:maxLength="250"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:maxLines="8" android:minLines="2"
    />
    <Button
            android:text="@string/save_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:id="@+id/save" android:textColor="#ffff"
            android:background="@drawable/button_background" android:textStyle="bold" android:textSize="24sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/detailEdit"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/delete" android:layout_marginStart="51dp"
            app:layout_constraintVertical_bias="0.6"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:gravity="center"
                  app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.65">

        <Button
                android:id="@+id/btn"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="読み上げ" android:background="@drawable/button_background" android:textStyle="bold"
                android:textSize="18sp" android:textColor="#FFFFFF"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>






